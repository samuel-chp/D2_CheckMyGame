@using DotNetBungieAPI.Service.Abstractions
@using DotNetBungieAPI.Models.Destiny.Components
@inject IBungieClient BungieClient

@page "/Player/{membershipType:int}/{membershipId:long}"

<MudContainer>
    <!-- Title !-->
    <MudText Typo="Typo.h3" Align="Align.Center">
        @DisplayName#@DisplayNameCode
    </MudText>
    
    @if (!String.IsNullOrEmpty(_playerGroupV2.Name))
    {
        <MudButton Variant="Variant.Filled" Color="Color.Primary">@_playerGroupV2.ClanInfo.ClanCallSign</MudButton>
    }

    @if (_playerCharacters.Count > 0)
    {
        <MudSelect T="DestinyCharacterComponent" ToStringFunc="@DisplayCharacter"
                   Label="Character" AnchorOrigin="Origin.BottomCenter">
            @foreach (var playerCharacter in _playerCharacters)
            {
                <MudSelectItem Value="playerCharacter" />
            }
            @* <MudSelectItem Value="@("Cappuccino")" /> *@
            @* <MudSelectItem Value="@("Cafe Latte")" /> *@
            @* <MudSelectItem Value="@("Espresso")" /> *@
        </MudSelect>
    }
    
</MudContainer>



